{
  "name": "@fluencesh/fluence.blockchain.ms",
  "version": "0.0.7-beta.4",
  "private": false,
  "license": "UNLICENSED",
  "author": "Andrew Zubko <andrew@applicature.com>",
  "engines": {
    "node": ">=4.8.0",
    "npm": ">=2.15.11",
    "yarn": ">=0.20.3"
  },
  "scripts": {
    "build": "gulp build",
    "lint": "tslint '{src/**/*.ts,test/**/*.ts}'",
    "precommit": "test:ci",
    "test": "jest",
    "test:ci": "jest --coverage --runInBand --forceExit",
    "test:sonar": "sonar-scanner -Dsonar.host.url=https://sonarcloud.io -Dsonar.login=$SONARCLOUD_TOKEN",
    "test:lint": "tslint --force --out ./test-reports/tslint.json -t json --project ./tsconfig.json 'src/**/*.{ts,tsx}'"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": ""
  },
  "dependencies": {
    "@fluencesh/fluence.metric.services": "0.0.1-beta.9",
    "@fluencesh/fluence.ms": "^0.0.9-beta.6",
    "@fluencesh/multivest.core": "^2.0.4",
    "@fluencesh/multivest.mongodb": "^0.2.1",
    "@fluencesh/multivest.services.blockchain": "^0.2.51-beta.5",
    "@fluencesh/multivest.web": "^0.2.6",
    "@types/agenda": "^2.0.2",
    "aws-sdk": "^2.290.0",
    "bignumber.js": "^7.2.1",
    "config": "^1.30.0",
    "express": "^4.16.3",
    "joi": "^13.5.2",
    "lodash": "^4.17.10",
    "uuid": "^3.3.2",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "@types/aws-sdk": "^2.7.0",
    "@types/bignumber.js": "^5.0.0",
    "@types/config": "0.0.33",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.0",
    "@types/joi": "^13.4.1",
    "@types/lodash": "^4.14.116",
    "@types/node": "^8.10.11",
    "@types/uuid": "^3.4.3",
    "@types/winston": "^2.3.7",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.4.0",
    "gulp-sourcemaps": "^2.6.3",
    "gulp-tslint": "^8.1.2",
    "gulp-typescript": "^3.2.3",
    "jest": "^21.2.1",
    "jest-junit": "^3.7.0",
    "jest-multi-test-result-processor": "^1.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "nsp": "^3.1.0",
    "sonarqube-scanner": "^2.1.0",
    "source-map-support": "^0.5.5",
    "ts-jest": "^21.2.4",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.8.3"
  },
  "files": [
    "dist/",
    "src/",
    "index.d.ts",
    "index.js"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "testResultsProcessor": "jest-multi-test-result-processor",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/.*?\\.d\\.ts$",
      "<rootDir>/.*?\\.mock\\.ts$"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "cobertura"
    ]
  },
  "jest-multi-test-result-processor": {
    "processors": [
      "jest-junit",
      "jest-sonar-reporter"
    ]
  },
  "jestSonar": {
    "reportPath": "./test-reports",
    "reportFile": "test-report.xml",
    "indent": 4
  },
  "jest-junit": {
    "output": "./test-reports/junit.xml"
  }
}
