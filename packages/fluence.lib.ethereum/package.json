    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1"
  },
  "files": [
    "@types/",
    "dist/",
    "src/"
  ],
  "jest-multi-test-result-processor": {
    "processors": [
      "jest-junit",
      "jest-sonar-reporter"
    ]
  },
  "jestSonar": {
    "reportPath": "./test-reports",
    "reportFile": "test-report.xml",
    "indent": 4
  },
  "jest-junit": {
    "output": "./test-reports/junit.xml"
  }
