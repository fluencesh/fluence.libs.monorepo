{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true, 
        "outDir": "./dist",
        "declaration": true,
        "paths": {
            "web3": [
                "@types/web3/index.d.ts"
            ],
            "ethers": [
                "@types/ethers/index.d.ts"
            ],
            "ethereumjs-tx": [
                "@types/ethereumjs-tx/index.d.ts"
            ],
            "ethereumjs-abi": [
                "@types/ethereumjs-abi/index.d.ts"
            ]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./@types"
        ]
    }
}