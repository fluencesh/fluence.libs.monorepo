{
  "name": "@fluencesh/fluence.lib.bitcoin",
  "version": "2.0.15-alpha.0",
  "private": false,
  "description": "Bitcoin Blockchain Plugin",
  "author": "Andrew Zubko <andrew@applicature.com>",
  "engines": {
    "node": ">=4.8.0",
    "npm": ">=2.15.11",
    "yarn": ">=0.20.3"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "gulp build",
    "lint": "tslint '{index.ts,src/**/*.ts,test/**/*.ts}'",
    "precommit": "npm run lint ; npm run test:integration",
    "test": "jest",
    "test:ci": "jest --coverage --forceExit --runInBand",
    "test:lint": "tslint --force -t json --project ./tsconfig.json '{index.ts,src/**/*.ts,test/**/*.ts}'",
    "test:sonar": "sonar-scanner -Dsonar.host.url=https://sonarcloud.io -Dsonar.login=$SONARCLOUD_TOKEN"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:fluencesh/fluence.libs.monorepo.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@applicature/synth.plugin-manager": "^2.0.21",
    "@fluencesh/fluence.lib.services": "^2.0.15-alpha.0",
    "bignumber.js": "^7.2.1",
    "bitcoin-core": "^1.2.0",
    "bitcoinjs-lib": "^3.3.0",
    "bitcoinjs-testnets": "^1.0.10",
    "bluebird": "^3.5.0",
    "config": "^1.30.0",
    "lodash": "^4.17.10",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "@types/agenda": "^1.0.3",
    "@types/bitcoinjs-lib": "^3.4.0",
    "@types/config": "0.0.33",
    "@types/jest": "^22.2.3",
    "@types/lodash": "^4.14.118",
    "@types/node": "^8.10.16",
    "@types/winston": "^2.3.9",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.4.0",
    "gulp-sourcemaps": "^2.6.3",
    "gulp-tslint": "^8.1.3",
    "gulp-typescript": "^3.2.3",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "jest-junit": "^3.7.0",
    "jest-multi-test-result-processor": "^1.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "nsp": "^3.1.0",
    "sonarqube-scanner": "^2.1.0",
    "source-map-support": "^0.5.5",
    "ts-jest": "^21.2.4",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^3.1.1"
  },
  "files": [
    "@types/",
    "dist/",
    "src/"
  ],
  "jest-multi-test-result-processor": {
    "processors": [
      "jest-junit",
      "jest-sonar-reporter"
    ]
  },
  "jestSonar": {
    "reportPath": "./test-reports",
    "reportFile": "test-report.xml",
    "indent": 4
  },
  "jest-junit": {
    "output": "./test-reports/junit.xml"
  }
}
