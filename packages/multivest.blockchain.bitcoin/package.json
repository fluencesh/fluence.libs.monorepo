{
  "name": "@fluencesh/multivest.blockchain.bitcoin",
  "version": "0.2.5",
  "private": false,
  "license": "UNLICENSED",
  "description": "Bitcoin Blockchain Plugin",
  "author": "Andrew Zubko <andrew@applicature.com>",
  "engines": {
    "node": ">=4.8.0",
    "npm": ">=2.15.11",
    "yarn": ">=0.20.3"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "gulp clean && gulp build",
    "lint": "tslint '{src/**/*.ts,test/**/*.ts}'",
    "precommit": "npm run lint ; npm run test:ci",
    "test": "jest test/unit",
    "test:integration": "jest test/integration --forceExit --runInBand",
    "test:ci": "jest --coverage --forceExit --runInBand",
    "test:sonar": "sonar-scanner -Dsonar.host.url=https://sonarcloud.io -Dsonar.login=$SONARCLOUD_TOKEN",
    "test:lint": "tslint --force --out ./test-reports/tslint.json -t json --project ./tsconfig.json 'src/**/*.{ts,tsx}'"
  },
  "repository": {
    "type": "git",
    "url": "git@bitbucket.com:applicature/multivest.blockchain.bitcoin.git"
  },
  "dependencies": {
    "@fluencesh/multivest.core": "^2.1.0-beta.0",
    "@fluencesh/multivest.mongodb": "^0.2.1",
    "@fluencesh/multivest.services.blockchain": "^0.2.53-beta.0",
    "agenda": "^1.0.3",
    "ajv": "^6.5.0",
    "bignumber.js": "^7.2.1",
    "bitcoin-core": "^1.2.0",
    "bitcoinjs-lib": "^3.3.0",
    "bluebird": "^3.5.0",
    "config": "^1.26.1",
    "lodash": "^4.17.10",
    "request-promise": "^4.2.2",
    "winston": "^2.1.1"
  },
  "devDependencies": {
    "@types/agenda": "^1.0.1",
    "@types/ajv": "^1.0.0",
    "@types/bitcoinjs-lib": "^3.3.1",
    "@types/bluebird": "^3.5.19",
    "@types/config": "0.0.33",
    "@types/jest": "^22.1.1",
    "@types/lodash": "^4.14.108",
    "@types/mongodb": "^2.2.18",
    "@types/node": "^8.5.2",
    "@types/request": "^2.47.0",
    "@types/request-promise": "^4.1.41",
    "@types/winston": "^2.3.7",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.4.0",
    "gulp-sourcemaps": "^2.6.3",
    "gulp-tslint": "^8.1.2",
    "gulp-typescript": "^3.2.3",
    "jest": "^21.2.1",
    "jest-junit": "^3.7.0",
    "jest-multi-test-result-processor": "^1.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "nsp": "^3.1.0",
    "sonarqube-scanner": "^2.1.0",
    "source-map-support": "^0.5.5",
    "ts-jest": "^21.2.4",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^3.1.1"
  },
  "files": [
    "dist/",
    "src/",
    "index.ts"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "testResultsProcessor": "jest-multi-test-result-processor",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/.*?\\.d\\.ts$",
      "<rootDir>/.*?\\.mock\\.ts$"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "cobertura"
    ]
  },
  "jest-multi-test-result-processor": {
    "processors": [
      "jest-junit",
      "jest-sonar-reporter"
    ]
  },
  "jestSonar": {
    "reportPath": "./test-reports",
    "reportFile": "test-report.xml",
    "indent": 4
  },
  "jest-junit": {
    "output": "./test-reports/junit.xml"
  }
}
