{
  "name": "@applicature-restricted/multivest.blockchain.ethereum",
  "version": "0.2.5",
  "private": false,
  "license": "UNLICENSED",
  "description": "Ethereum Blockchain Plugin",
  "author": "Andrew Zubko <andrew@applicature.com>",
  "engines": {
    "node": ">=4.8.0",
    "npm": ">=2.15.11",
    "yarn": ">=0.20.3"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "gulp clean && gulp build",
    "lint": "tslint '{src/**/*.ts,test/**/*.ts}'",
    "precommit": "npm run lint ; npm run test:coverage ; npm run test:security",
    "test": "jest test/unit",
    "test:integration": "jest test/integration",
    "test:coverage": "jest test/unit --coverage --collectCoverageFrom=*/**/*.ts",
    "test:ci": "jest test/unit --coverage --testResultsProcessor ./node_modules/jest-junit --collectCoverageFrom=*/**/*.ts",
    "test:security": "nsp check"
  },
  "repository": {
    "type": "git",
    "url": "git@bitbucket.com:applicature/multivest.blockchain.ethereum.git"
  },
  "publishConfig": {
    "registry": "https://artifacts-dev.zubko.biz/repository/applicature-restricted/"
  },
  "dependencies": {
    "@applicature-restricted/multivest.blockchain": "^0.2.15",
    "@applicature-restricted/multivest.services.blockchain": "^0.2.3",
    "@applicature/multivest.core": "^0.1.24",
    "bignumber.js": "^4.1.0",
    "config": "^1.26.1",
    "ethereum-bip44": "^2.1.3",
    "ethereumjs-abi": "^0.6.5",
    "ethereumjs-tx": "^1.3.3",
    "ethereumjs-util": "^5.1.3",
    "ethers": "^3.0.7",
    "mongodb": "^2.2.28",
    "web3": "^0.19",
    "winston": "^2.1.1"
  },
  "devDependencies": {
    "@types/agenda": "^1.0.1",
    "@types/bignumber.js": "^5.0.0",
    "@types/config": "0.0.33",
    "@types/ethereumjs-util": "^5.1.1",
    "@types/jest": "^22.1.1",
    "@types/mongodb": "^2.2.18",
    "@types/node": "^8.5.2",
    "@types/uuid": "^3.4.3",
    "@types/winston": "^2.3.7",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.4.0",
    "gulp-sourcemaps": "^2.6.3",
    "gulp-tslint": "^8.1.2",
    "gulp-typescript": "^3.2.3",
    "jest": "^21.2.1",
    "jest-junit": "^3.4.1",
    "nsp": "^3.1.0",
    "source-map-support": "^0.5.0",
    "ts-jest": "^21.2.4",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2"
  },
  "files": [
    "@types/",
    "dist/",
    "src/"
  ],
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "node"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/.*?\\.d\\.ts$",
      "<rootDir>/.*?\\.mock\\.ts$"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "cobertura"
    ]
  },
  "jest-junit": {
    "output": "./coverage/junit.xml"
  }
}
