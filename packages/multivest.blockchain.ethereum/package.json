{
  "name": "@fluencesh/multivest.blockchain.ethereum",
  "version": "0.2.41-beta.4",
  "private": false,
  "license": "UNLICENSED",
  "description": "Ethereum Blockchain Plugin",
  "author": "Andrew Zubko <andrew@applicature.com>",
  "engines": {
    "node": ">=4.8.0",
    "npm": ">=2.15.11",
    "yarn": ">=0.20.3"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "gulp build",
    "lint": "tslint '{src/**/*.ts,test/**/*.ts}'",
    "precommit": "test:ci",
    "test": "jest",
    "test:ci": "jest --coverage --runInBand --forceExit",
    "test:sonar": "sonar-scanner -Dsonar.host.url=https://sonarcloud.io -Dsonar.login=$SONARCLOUD_TOKEN",
    "test:lint": "tslint --force --out ./test-reports/tslint.json -t json --project ./tsconfig.json 'src/**/*.{ts,tsx}'"
  },
  "repository": {
    "type": "git",
    "url": "git@bitbucket.com:applicature/multivest.blockchain.ethereum.git"
  },
  "dependencies": {
    "@fluencesh/multivest.core": "^2.0.4",
    "@fluencesh/multivest.mongodb": "^0.2.1",
    "@fluencesh/multivest.services.blockchain": "^0.2.51-beta.5",
    "axios": "^0.18.0",
    "bignumber.js": "^4.1.0",
    "config": "^1.30.0",
    "ethereum-bip44": "^2.1.3",
    "ethereumjs-abi": "^0.6.5",
    "ethereumjs-tx": "^1.3.4",
    "ethereumjs-util": "^5.2.0",
    "ethers": "^3.0.15",
    "json2yaml": "^1.1.0",
    "mongodb": "^2.2.35",
    "web3": "^0.19",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "@types/agenda": "^1.0.3",
    "@types/bignumber.js": "^5.0.0",
    "@types/body-parser": "^1.17.0",
    "@types/config": "0.0.33",
    "@types/cors": "^2.8.4",
    "@types/ethereumjs-util": "^5.1.1",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.2.3",
    "@types/lodash": "^4.14.108",
    "@types/mongodb": "^2.2.18",
    "@types/nock": "^9.1.3",
    "@types/node": "^8.10.17",
    "@types/uuid": "^3.4.3",
    "@types/winston": "^2.3.9",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.4.0",
    "gulp-sourcemaps": "^2.6.3",
    "gulp-tslint": "^8.1.3",
    "gulp-typescript": "^3.2.3",
    "jest": "^21.2.1",
    "jest-junit": "^3.7.0",
    "jest-multi-test-result-processor": "^1.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "lodash": "^4.17.10",
    "nsp": "^3.2.1",
    "randomstring": "^1.1.5",
    "sonarqube-scanner": "^2.1.0",
    "source-map-support": "^0.5.5",
    "ts-jest": "^21.2.4",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.9.2"
  },
  "files": [
    "@types/",
    "dist/",
    "src/"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "testResultsProcessor": "jest-multi-test-result-processor",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/.*?\\.d\\.ts$",
      "<rootDir>/.*?\\.mock\\.ts$"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "cobertura"
    ]
  },
  "jest-multi-test-result-processor": {
    "processors": [
      "jest-junit",
      "jest-sonar-reporter"
    ]
  },
  "jestSonar": {
    "reportPath": "./test-reports",
    "reportFile": "test-report.xml",
    "indent": 4
  },
  "jest-junit": {
    "output": "./test-reports/junit.xml"
  }
}
