{
    "name": "@applicature-private/multivest.services.blockchain",
    "version": "0.2.51-beta.5",
    "private": false,
    "license": "UNLICENSED",
    "description": "BlockPool Services Plugin",
    "author": "Andrew Zubko <andrew@applicature.com>",
    "engines": {
        "node": ">=4.8.0",
        "npm": ">=2.15.11",
        "yarn": ">=0.20.3"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "gulp clean && gulp build",
        "lint": "tslint '{src/**/*.ts,test/**/*.ts}'",
        "precommit": "npm run lint ; npm run test:ci",
        "test": "jest test/unit",
        "test:integration": "jest test/integration --forceExit --runInBand",
        "test:ci": "jest --coverage --forceExit --runInBand",
        "test:sonar": "sonar-scanner -Dsonar.host.url=https://sonarcloud.io -Dsonar.login=$SONARCLOUD_TOKEN",
        "test:lint": "tslint --force --out ./test-reports/tslint.json -t json --project ./tsconfig.json 'src/**/*.{ts,tsx}'"
    },
    "repository": {
        "type": "git",
        "url": "git@bitbucket.com:applicature/multivest.services.blockchain.git"
    },
    "dependencies": {
        "@applicature-private/fluence.metric.services": "0.0.1-beta.1",
        "@applicature-private/multivest.core": "^2.0.6",
        "@applicature-private/multivest.mongodb": "^0.2.3",
        "agenda": "^1.0.3",
        "aws-sdk": "^2.317.0",
        "axios": "^0.18.0",
        "bignumber.js": "^7.2.1",
        "config": "^1.29.2",
        "ethereumjs-util": "^5.2.0",
        "faker": "^4.1.0",
        "jsonwebtoken": "^8.2.1",
        "lodash": "^4.17.11",
        "mongodb": "^2.2.28",
        "prom-client": "^11.1.3",
        "randomstring": "^1.1.5",
        "uuid": "^3.2.1",
        "winston": "^2.4.4"
    },
    "devDependencies": {
        "@types/agenda": "^1.0.1",
        "@types/bignumber.js": "^5.0.0",
        "@types/config": "0.0.33",
        "@types/ethereumjs-util": "^5.2.0",
        "@types/faker": "^4.1.4",
        "@types/jest": "^22.1.0",
        "@types/jsonwebtoken": "^7.2.7",
        "@types/lodash": "^4.14.117",
        "@types/mongodb": "^2.2.23",
        "@types/node": "^8.10.36",
        "@types/randomstring": "^1.1.6",
        "@types/uuid": "^3.4.4",
        "@types/winston": "^2.4.4",
        "gulp": "^3.9.1",
        "gulp-clean": "^0.4.0",
        "gulp-sourcemaps": "^2.6.3",
        "gulp-tslint": "^8.1.2",
        "gulp-typescript": "^3.2.3",
        "husky": "^0.14.3",
        "jest": "^22.1.4",
        "jest-cli": "^23.6.0",
        "jest-junit": "^3.4.1",
        "jest-multi-test-result-processor": "^1.0.0",
        "jest-sonar-reporter": "^2.0.0",
        "mongo-mock": "^3.3.2",
        "nsp": "^3.1.0",
        "sonarqube-scanner": "^2.1.2",
        "ts-jest": "^22.0.1",
        "tslint": "^5.11.0",
        "typescript": "^2.9.2"
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.ts"
        ],
        "testEnvironment": "node",
        "globals": {
            "ts-jest": {
                "skipBabel": true
            }
        },
        "testResultsProcessor": "jest-multi-test-result-processor",
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "coveragePathIgnorePatterns": [
            "<rootDir>/.*?\\.d\\.ts$",
            "<rootDir>/.*?\\.mock\\.ts$"
        ],
        "coverageReporters": [
            "json",
            "lcov",
            "text",
            "clover",
            "cobertura"
        ]
    },
    "jest-multi-test-result-processor": {
        "processors": [
            "jest-junit",
            "jest-sonar-reporter"
        ]
    },
    "jestSonar": {
        "reportPath": "./test-reports",
        "reportFile": "test-report.xml",
        "indent": 4
    },
    "jest-junit": {
        "output": "./test-reports/junit.xml"
    }
}