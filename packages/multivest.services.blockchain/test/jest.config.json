{
    "transform": {
        "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
        "ts-jest": {
          "tsConfigFile": "./tsconfig.test.json"
        }
    },
    "testRegex": "test\/.*\\.spec\\.ts",
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "node"
    ],
    "collectCoverage": false,
    "coveragePathIgnorePatterns": ["/node_modules/", "coverage"],
    "testEnvironment": "node"
}
