{
  "extends": "tslint:recommended",
  "rules": {
    "array-type": [true, "generic"],
    "interface-name": false,
    "no-trailing-whitespace": [true, "ignore-blank-lines"],
    "one-line": false,
    "quotemark": [true, "single"],
    "curly": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "functions": "never"
        }
      }
    ]
  }
}